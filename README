$ mkdir ~/.vim
$ cd ~/.vim
$ hg clone https://buruzaemon@me-vimrc.googlecode.com/hg/ .
$ cd
$ ln -s .vim/etc/vimrc ~/.vimrc

$ ln -s .vim/etc/hgrc ~/.hgrc
... you may want to fetch that cacert.pem
c.f. http://curl.haxx.se/ca/cacert.pem

$ ln -s .vim/etc/pythonrcpy ~/.pythonrc.py
export PYTHONSTARTUP=~/.pythonrc.py

$ ln -s .vim/etc/irbrc ~/.irbrc
... you should install that interactive_editor gem
c.f. http://vimcasts.org/episodes/running-vim-within-irb/
